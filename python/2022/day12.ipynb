    "\n",
    "def bfs(paths, start, end):\n",
    "  previous = {}\n",
    "  queue = [ start ]\n",
    "\n",
    "  while queue:\n",
    "    cur = queue.pop(0)\n",
    "\n",
    "    for n in paths[cur]:\n",
    "      if n in previous.keys():\n",
    "        continue\n",
    "    \n",
    "      previous[n] = cur\n",
    "      queue.append(n)\n",
    "\n",
    "  shortest_path = []\n",
    "  cur = end\n",
    "  while cur != start:\n",
    "    if cur not in previous.keys():\n",
    "      break\n",
    "\n",
    "    shortest_path.append(cur)\n",
    "    cur = previous[cur]\n",
    "\n",
    "  return shortest_path"
   ]
